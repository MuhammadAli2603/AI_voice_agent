# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Hugging Face API (REQUIRED)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Knowledge Base Integration
KB_SERVICE_URL=http://localhost:8001

# AI Models (Hugging Face Model IDs)
STT_MODEL=openai/whisper-large-v3
LLM_MODEL=microsoft/DialoGPT-medium
TTS_MODEL=facebook/mms-tts-eng

# Device Configuration
DEVICE=cpu

# Audio Settings
SAMPLE_RATE=16000
MAX_AUDIO_LENGTH=30

# LLM Settings
LLM_MAX_LENGTH=512
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_MAX_NEW_TOKENS=150

# API Settings
API_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
